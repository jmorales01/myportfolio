---
import Badge from '@/components/Badge.astro';
import SectionConteiner from '@/components/SectionConteiner.astro';
import SocialPill from '@/components/SocialPill.astro';
import LinkedIn from '@/components/icons/LinkedIn.astro';
import Layout from '@/layouts/Layout.astro';
---

<Layout 
    title="Components"
    description="Components">

    <SectionConteiner class="py-44 pb-32 flex flex-col gap-y-10">

        <article class="mb-10">
            <h1 class="mb-4 text-xl font-semibold">&lt;Badge/&gt;</h1>

            <Badge>tailwind</Badge>
            <Badge>button</Badge>
        </article>
        <article class="mb-10">
            <h1 class="mb-4 text-xl font-semibold">&lt;SocialPill/&gt;</h1>

            <div class="flex">
                <SocialPill href="https://www.linkedin.com/in/josemoralesv24/">
                    <LinkedIn class="size-4 md:size-6" />
                    LinkedIn
                </SocialPill>
            </div>
        </article>
    </SectionConteiner>

</Layout>